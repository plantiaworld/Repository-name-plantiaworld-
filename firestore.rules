rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========== 공통 함수 ==========
    function isLoggedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isLoggedIn() && request.auth.uid == uid;
    }

    // ⭐ 관리자 UID — 본인 Firebase UID로 교체하세요
    function isAdmin() {
      return isLoggedIn() && request.auth.uid in [
        'LIuwCkomQmf0iHf7QoBXs57OecI2'
      ];
    }


    // ========== products 컬렉션 ==========
    match /products/{productId} {
      allow read: if true;

      allow create: if isLoggedIn()
        && request.resource.data.sellerId == request.auth.uid
        && request.resource.data.title is string
        && request.resource.data.title.size() > 0
        && request.resource.data.title.size() <= 50
        && request.resource.data.price is number
        && request.resource.data.price >= 0;

      allow update: if isLoggedIn() && (
        isAdmin()
        || resource.data.sellerId == request.auth.uid
        || request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['views', 'likeCount', 'chatCount', 'likedBy'])
      );

      allow delete: if isLoggedIn()
        && (resource.data.sellerId == request.auth.uid || isAdmin());
    }


    // ========== users 컬렉션 ==========
    match /users/{userId} {
      allow read: if isLoggedIn();
      allow create: if isOwner(userId);

      // ✅ fcmTokens, notificationEnabled 포함 업데이트 허용
      allow update: if isOwner(userId) || isAdmin();

      allow delete: if isOwner(userId);
    }


    // ========== chats 컬렉션 ==========
    match /chats/{chatId} {

      // ✅ 참여자 여부 확인 함수 (buyerId, sellerId, participants 배열 모두 지원)
      function isChatParticipant() {
        return resource.data.buyerId  == request.auth.uid ||
               resource.data.sellerId == request.auth.uid ||
               (resource.data.keys().hasAny(['participants']) &&
                request.auth.uid in resource.data.participants);
      }

      allow read: if isLoggedIn() && (isChatParticipant() || isAdmin());

      allow create: if isLoggedIn()
        && request.resource.data.buyerId == request.auth.uid;

      allow update: if isLoggedIn() && (isChatParticipant() || isAdmin());

      allow delete: if false;

      // 메시지 서브컬렉션
      match /messages/{messageId} {

        // ✅ 메시지 권한 확인 함수 (participants 배열 포함)
        function isMsgParticipant() {
          let chat = get(/databases/$(database)/documents/chats/$(chatId)).data;
          return chat.buyerId  == request.auth.uid ||
                 chat.sellerId == request.auth.uid ||
                 (chat.keys().hasAny(['participants']) &&
                  request.auth.uid in chat.participants);
        }

        allow read, create: if isLoggedIn() && isMsgParticipant();

        // ✅ 본인 메시지: deleted 플래그 소프트 삭제 허용
        allow update: if isLoggedIn()
          && resource.data.senderId == request.auth.uid
          && request.resource.data.diff(resource.data).affectedKeys()
              .hasOnly(['deleted', 'deletedAt', 'text', 'imageUrl']);
        allow delete: if false;
      }
    }


    // ========== reports 컬렉션 ==========
    match /reports/{reportId} {
      allow read:   if isAdmin();
      allow update: if isAdmin();
      allow delete: if false;

      allow create: if isLoggedIn()
        && request.resource.data.reporterId == request.auth.uid
        && request.resource.data.type   is string
        && request.resource.data.reason is string;
    }


    // ========== inquiries 컬렉션 ==========
    match /inquiries/{inquiryId} {
      allow read:   if isAdmin();
      allow update: if isAdmin();
      allow delete: if false;

      allow create: if
        request.resource.data.name    is string && request.resource.data.name.size()    > 0 &&
        request.resource.data.email   is string && request.resource.data.email.size()   > 0 &&
        request.resource.data.type    is string && request.resource.data.type.size()    > 0 &&
        request.resource.data.title   is string && request.resource.data.title.size()   > 0 &&
        request.resource.data.content is string && request.resource.data.content.size() > 0 &&
        request.resource.data.content.size() <= 1000;
    }

  }
}
