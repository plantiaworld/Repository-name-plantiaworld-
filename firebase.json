{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/edit-product",
        "destination": "/add-product.html"
      },
      {
        "source": "/edit-product.html",
        "destination": "/add-product.html"
      },
      {
        "source": "/admin",
        "destination": "/admin.html"
      }
    ],
    "cleanUrls": false
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}